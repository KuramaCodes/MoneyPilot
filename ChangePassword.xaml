<Window x:Class="MoneyPilot.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyPilot"
        mc:Ignorable="d"
        Title="ChangePassword" Height="250" Width="450">
    <Grid Height="230" Width="450">
        <Label Height="30" Width="102" Content="New Password:" FontSize="13" FontWeight="Bold" Margin="0,17,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <PasswordBox Height="30" x:Name="NewPasswordOne" Margin="0,47,0,153" FontSize="13" VerticalContentAlignment="Center"/>
        <Label Height="30" Width="120" Content="Repeat Password:" FontSize="13" FontWeight="Bold" Margin="0,82,330,118"/>
        <PasswordBox Height="30" x:Name="NewPasswordTwo" Margin="0,112,0,88" FontSize="13" VerticalContentAlignment="Center"/>
        <Button Height="30" Width="100" Content="Save Password" FontSize="13" FontWeight="Bold" Background="Green" Foreground="White" x:Name="Save" Click="Save_Click" Margin="10,147,340,53"/>
        <Button Height="30" Width="100" Content="Cancel" FontSize="13" FontWeight="Bold" Background="Red" Foreground="White" x:Name="Cancel" Click="Cancel_Click" Margin="340,147,10,53"/>
    </Grid>
</Window>
